<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sqlite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#7BD6FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.color" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/aqua</item>
    </style>

    <style name="ButtonCancel.color" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/red</item>
    </style>
    <style name="ButtonAdd.color" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Plus.color" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
    </style>
</resources>